doctype html
html
  head
    meta(charset='UTF-8')
    title Data Page
    link(rel='stylesheet', href='style.css')
    style
      body
        background-color: lightblue;
      h1
        text-align: center;
        color: white;
      table
        margin: auto;
        background-color: white;
        border-collapse: collapse;
        width: 50%;
        margin-top: 20px;
        padding: 10px;
        border: 1px solid black;
        background-color: azure;
      th, td
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      tr:hover
        background-color: #e6e6e6;
      #filter
        margin-top: 100px;
        margin-bottom: 10px;
        margin-left: 480px;
        padding: 8px;
        border-radius: 5px;
        border: grey;
        width: 200px;
        display: block;
        float: left;
  body
    header
      .logo
        img(src='logo.png', alt='Company Logo')
      nav.navigation
        ul
          li
            a(href='#') Home
          li
            a(href='#') About
          li
            a(href='#') Career
          li
            a(href='#') Contact
      .login-signup
        button.login Login
        button.signup Sign Up
    h1 Data Page
    input#filter(type='text', placeholder='Search...')
    table
      tr
        th Country
        th Population
        th Continent
      tr
        td France
        td 10,000
        td Europe
      tr
        td Brazil
        td 3,000
        td South America
      tr
        td Germany
        td 5,000
        td Europe
      tr
        td Kenya
        td 1,000,000
        td Africa
    footer
      nav.navigation
        ul
          li
            a(href='#') Home
          li
            a(href='#') About
          li
            a(href='#') Career
          li
            a(href='#contact') Contact
      .email-message
        a(href='#contact')
          img(src='email_icon.png', alt='Email/Message')
